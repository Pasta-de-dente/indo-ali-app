<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/resumeBackTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_green"
            android:text="voltar"
            android:textColor="@color/white" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewAviao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_rounded_corner"
            android:backgroundTint="@color/dark_gray"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Avião"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/viewCUSTO_POR_PESSOA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CUSTO_POR_PESSOA"
                    android:textColor="@color/white"
                    android:textSize="15dp">

                </TextView>

                <TextView
                    android:id="@+id/viewALUGUEL_VEICULO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ALUGUEL_VEICULO"
                    android:textColor="@color/white"
                    android:textSize="15dp">

                </TextView>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/viewAviaoTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total:"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewCarro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_rounded_corner"
            android:backgroundTint="@color/dark_gray"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Carro"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/viewCUSTO_MEDIO_LITRO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CUSTO_MEDIO_LITRO"
                    android:textColor="@color/white"
                    android:textSize="15dp">

                </TextView>

                <TextView
                    android:id="@+id/viewMEDIA_KM_LITRO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MEDIA_KM_LITRO"
                    android:textColor="@color/white"
                    android:textSize="15dp">

                </TextView>

                <TextView
                    android:id="@+id/viewTOTAL_VEICULO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TOTAL_VEICULO"
                    android:textColor="@color/white"
                    android:textSize="15dp">

                </TextView>

                <TextView
                    android:id="@+id/viewTOTAL_ESTIMADO_KM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TOTAL_ESTIMADO_KM"
                    android:textColor="@color/white"
                    android:textSize="15dp">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/viewCarroTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total:"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewRefeicao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_rounded_corner"
            android:backgroundTint="@color/dark_gray"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Refeição"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/viewCUSTO_ESTIMADO_POR_REFEICAO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CUSTO_ESTIMADO_POR_REFEICAO"
                    android:textColor="@color/white"
                    android:textSize="15dp">

                </TextView>

                <TextView
                    android:id="@+id/viewQTDA_REFEICAO_POR_DIA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="QTDA_REFEICAO_POR_DIA"
                    android:textColor="@color/white"
                    android:textSize="15dp">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/viewRefeicaoTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total:"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewHospedagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_rounded_corner"
            android:backgroundTint="@color/dark_gray"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hospedagem"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/viewCUSTO_MEDIO_POR_NOITE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CUSTO_MEDIO_POR_NOITE"
                    android:textColor="@color/white"
                    android:textSize="15dp">

                </TextView>

                <TextView
                    android:id="@+id/viewTOTAL_DE_NOITE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TOTAL_DE_NOITE"
                    android:textColor="@color/white"
                    android:textSize="15dp">

                </TextView>

                <TextView
                    android:id="@+id/viewTOTAL_QUARTOS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TOTAL_QUARTOS"
                    android:textColor="@color/white"
                    android:textSize="15dp">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/viewHospedagemTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total:"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">

            <ListView
                android:id="@+id/viewListEntretenimento"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/listview_rounded_corner" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>