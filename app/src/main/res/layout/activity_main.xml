<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/transparent"
                    android:drawableLeft="@drawable/baseline_logout_24"
                    android:paddingStart="10dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:src="@drawable/paodeacucar" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="-40dp"
                android:layout_marginBottom="10dp"
                android:text="@string/aonde_vamos"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_margin="30dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/lugarViajem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_corner"
                android:backgroundTint="@color/dark_gray"
                android:hint="Digite o local da viajem"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"></Space>
            <EditText
                android:textColorHint="@color/white"
                android:hint="Data da viajem"
                android:id="@+id/txtDataViajem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_corner"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:backgroundTint="@color/dark_gray"
                android:textColor="@color/white"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
              />
            <Button
                android:id="@+id/btnAnalisar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="180dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="@color/deep_green"
                android:text="Analisar"
                android:textColor="@color/white"
                android:textSize="18sp" />


            <ListView
                android:id="@+id/list_viajens"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:divider="@android:color/transparent"
                android:dividerHeight="5dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>